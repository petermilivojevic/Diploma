%% For including many figures.
%% Usage \manyfigures{parameters for includegraphics, like width, scale...}{file}{number pages}{starting overlay}
\newcounter{forpages}
\newcounter{foroverlays}

\def \manyfigures #1#2#3#4{\setcounter{forpages}{0}%
		\setcounter{foroverlays}{1}%
		\whiledo{\value{forpages}< #3}{%
			\addtocounter{forpages}{1}%
			\includegraphics<\theforoverlays>[page=\theforpages  ,#1]{#2}%
			\addtocounter{foroverlays}{1}%
			}}




%%SERGIO's changes
\newlength{\lengthbarperframe}	%It represents the lengthof the bar if the whole paperwidth is used
\newcounter{forbar} %Used for counting in which frame we are

\defbeamertemplate*{footline}{infolines theme}
{%
  \ifthenelse{\isundefined{\inserttotalframenumber}}% Make sure that \inserttotalframenumber is defined
	{\newcommand{\inserttotalframenumber}{1}}{}
	\leavevmode%
  %
  \hbox{%
  \begin{beamercolorbox}[wd=.2\paperwidth,ht=2.25ex,dp=1ex,center]{author in head/foot}%
    \usebeamerfont{author in head/foot}\insertshortauthor
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.2\paperwidth,ht=2.25ex,dp=1ex,center]{title in head/foot}%
    \usebeamerfont{title in head/foot}\insertshorttitle
  \end{beamercolorbox}%
  \setlength{\lengthbarperframe}{.6\paperwidth/\inserttotalframenumber}%
  %
  \setcounter{forbar}{0}%
  \whiledo{\value{forbar} < \inserttotalframenumber}{%
		\ifthenelse{\value{forbar} < \insertframenumber}{%
			\addtocounter{forbar}{1}%
			\hyperlink{frame:\theforbar}{%
				\begin{beamercolorbox}[wd=\lengthbarperframe,ht=2.25ex,dp=1ex,left]{author in head/foot}%
				\end{beamercolorbox}}}{%
			\addtocounter{forbar}{1}%
			\hyperlink{frame:\theforbar}{%
				\begin{beamercolorbox}[wd=\lengthbarperframe,ht=2.25ex,dp=1ex,left]{title in head/foot}%
				\end{beamercolorbox}}}%
			}%
		}%
  \vskip0pt%
}


